{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Notification",
  "description": "Describes a client notification in the ABC Bank System",
  "type": "object",
  "properties": {
    "id": {
      "description": "The id of the notification - Autogenerated",
      "type": "integer"
    },
    "idClient": {
      "description": "Client id",
      "type": "integer"
    },
    "notificationType": {
      "description": "Type of notification",
      "type": "string",
      "enum": [
        "EMAIL"
      ]
    },
    "message": {
      "description": "The message to send",
      "$ref": "./email.json"
    }
  },
  "additionalProperties": false
}