{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Email",
  "description": "Describes a email in the ABC Bank System",
  "type": "object",
  "properties": {
    "fromEmail": {
      "description": "The FROM of the email",
      "type": "string",
      "pattern": "^[a-z0-9]+(.[_a-z0-9]+)*@[a-z0-9-]+(.[a-z0-9-]+)*(.[a-z]{2,15})$"
    },
    "toEmail": {
      "description": "The TO of the email",
      "type": "string",
      "pattern": "^[a-z0-9]+(.[_a-z0-9]+)*@[a-z0-9-]+(.[a-z0-9-]+)*(.[a-z]{2,15})$"
    },
    "subject": {
      "description": "The title of the message",
      "type": "string",
      "minLength": 4,
      "maxLength": 15
    },
    "content": {
      "description": "The value of the identification",
      "type": "string",
      "minLength": 10,
      "maxLength": 30
    }
  },
  "additionalProperties": false
}