{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Client",
  "description": "Describes a client in the ABC Bank System",
  "type": "object",
  "properties": {
    "id": {
      "description": "The id of the client",
      "type": "integer"
    },
    "idType": {
      "description": "Type of identification",
      "type": "string",
      "enum": [
        "CC",
        "CE",
        "PASSPORT"
      ]
    },
    "idValue": {
      "description": "The value of the identification",
      "type": "string",
      "minLength": 6,
      "maxLength": 20
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 15
    },
    "lastName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 15
    },
    "email": {
      "type": "string",
      "pattern": "^[a-z0-9]+(.[_a-z0-9]+)*@[a-z0-9-]+(.[a-z0-9-]+)*(.[a-z]{2,15})$"
    },
    "phone": {
      "type": "string",
      "pattern": "^(([0-9]{3})-?)?[0-9]{7}$"
    }
  },
  "required": [
    "idType",
    "idValue",
    "name",
    "lastName",
    "identification",
    "email"
  ],
  "additionalProperties": false
}