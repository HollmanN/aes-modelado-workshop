{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Client",
  "description": "Describes a client in the ABC Bank System",
  "type": "object",
  "properties": {
    "id": {
      "description": "The id of the client",
      "type": "string"
    },
    "name": {
      "type": "string",
      "minimum": 3,
      "pattern": "[a-zA-Z]+"
    },
    "lastName": {
      "type": "string",
      "minimum": 3,
      "pattern": "[a-zA-Z]+"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string",
      "format": "email"
    }
  },
  "additionalProperties": false
}